# MD for Material Design
# pos_hint form is object, y axis: 0.45 degrees

MDFloatLayout:
    MDLabel:
        id: task_label
        halign: "center"
        markup: True
        text: "[b][size=48]Task Manager[/size][/b]"
        pos_hint: {"y": 0.45}

    ScrollView:
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
        size_hint: 0.9, 0.8
        MDList:
            id: container

    MDFloatingActionButton:
        icon: "plus-thick"
        # on_release:
        elevation_normal: 12
        pos_hint: {"x": 0.45, "y": 0.04}

        